---
import { Image } from "astro:assets";
import { socialNetworkLinks } from "@/lib/constants/socialNetworkLinks";
const gitHub = socialNetworkLinks.find(
  (social) => social.socialNetwork === "GitHub"
);

const githubRef = gitHub?.href ?? "https://github.com/";
---

<section
  class="h-full flex flex-col justify-between"
  aria-labelledby="projects-heading"
>
  <div>
    <header class="mb-4">
      <h3
        id="projects-heading"
        class="text-2xl font-bold text-zinc-50 leading-tight tracking-tight"
      >
        Mira en qué he estado
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400"
        >
          trabajando últimamente
        </span>
      </h3>
    </header>

    <div class="flex flex-col gap-4" role="list">
      <article
        class="relative group/card rounded-xl overflow-hidden border border-zinc-800 bg-gradient-to-br from-zinc-900/50 to-zinc-950/50 hover:border-zinc-700 transition-all duration-300"
        role="listitem"
      >
        <div class="relative h-full overflow-hidden">
          <div
            class="absolute inset-0 bg-gradient-to-t from-zinc-950 via-zinc-950/40 to-transparent z-10"
            aria-hidden="true"
          >
          </div>
          <Image
            src="/kanban.webp"
            alt="React Kanban Board - Sistema de gestión de tareas"
            width={600}
            height={400}
            format="webp"
            quality={80}
            loading="lazy"
            class="flex sm:hidden lg:flex w-full h-full object-cover object-top transition-transform duration-500 group-hover/card:scale-105"
          />
        </div>
        <div class="p-4 space-y-3">
          <div class="flex items-center justify-between gap-2">
            <h4 class="text-base font-semibold text-zinc-100 truncate">
              Kanban Board
            </h4>
            <a
              href={githubRef}
              target="_blank"
              rel="noopener noreferrer"
              class="shrink-0 p-1.5 rounded-lg bg-zinc-800 hover:bg-zinc-700 transition-colors focus:outline-none focus:ring-2 focus:ring-zinc-600 focus:ring-offset-2 focus:ring-offset-zinc-950"
              aria-label="Ver proyecto Kanban Board en GitHub"
            >
              <svg
                class="w-4 h-4 text-zinc-300"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </article>

      <article
        class="hidden sm:block lg:hidden relative group/card rounded-xl overflow-hidden border border-zinc-800 bg-gradient-to-br from-zinc-900/50 to-zinc-950/50 hover:border-zinc-700 transition-all duration-300"
        role="listitem"
      >
        <div class="relative h-full overflow-hidden">
          <div
            class="absolute inset-0 bg-gradient-to-t from-zinc-950 via-zinc-950/40 to-transparent z-10"
            aria-hidden="true"
          >
          </div>
          <Image
            src="/kanban.webp"
            alt="Checkmate - Aplicación de ajedrez"
            width={600}
            height={400}
            format="webp"
            quality={80}
            loading="lazy"
            class="flex sm:hidden lg:flex w-full h-full object-cover object-top transition-transform duration-500 group-hover/card:scale-105"
          />
        </div>
        <div class="p-4 space-y-3">
          <div class="flex items-center justify-between gap-2">
            <h4 class="text-base font-semibold text-zinc-100 truncate">
              Checkmate
            </h4>
            <a
              href={githubRef}
              target="_blank"
              rel="noopener noreferrer"
              class="shrink-0 p-1.5 rounded-lg bg-zinc-800 hover:bg-zinc-700 transition-colors focus:outline-none focus:ring-2 focus:ring-zinc-600 focus:ring-offset-2 focus:ring-offset-zinc-950"
              aria-label="Ver proyecto Checkmate en GitHub"
            >
              <svg
                class="w-4 h-4 text-zinc-300"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </article>
    </div>
  </div>
</section>
