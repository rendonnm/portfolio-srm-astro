---
import Header from "@/sections/Header.astro";
import Footer from "@/sections/Footer.astro";
import Background from "@/components/Background.astro";
import { MouseFollower } from "@/components/MouseFollower";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Santiago Rendón Múnera Portfolio</title>
		<meta name="description" content="Put your description here." />
		<meta
			name="description"
			content="Soy Santiago Rendón, desarrollador fullstack de Medellín. 
		Construyo aplicaciones web modernas con JavaScript, TypeScript, React y Django REST Framework. 
		Apasionado por el frontend, el backend y todo lo que tenga ritmo, lógica y propósito."
		/>
	</head>
	<body class="relative min-h-screen w-full">
		<Background />
		<Header />
		<!-- <MouseFollower client:only="react" /> -->
		<main
			class="px-4 relative section py-14 sm:py-20 scroll-m-20 w-full mx-auto container lg:max-w-5xl md:max-w-3xl"
		>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	@font-face {
		font-family: "NunitoSans";
		src: url("/NunitoSans.ttf") format("truetype");
		font-display: swap;
	}
	html,
	body {
		background-color: transparent;
		font-family: "NunitoSans", sans-serif;
		color: white;
	}
	:root {
		background-color: black;
		scroll-behavior: smooth;
	}
</style>
