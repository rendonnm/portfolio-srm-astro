---
import BentoCard from "@/components/BentoCard.astro";
import GitHubActivity from "@/components/GitHubActivity.astro";
import MonkeyTypeStats from "@/components/MonkeyTypeStats.astro";
import SpotifyLastSongPlayed from "@/components/SpotifyLastSongPlayed.astro";
---

<article
  class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-40 gap-4 auto-rows-auto sm:auto-rows-fr mb-30"
>
  <BentoCard class="sm:col-span-2 lg:col-span-[24] lg:row-start-1 lg:row-end-4">
    <MonkeyTypeStats />
  </BentoCard>

  <BentoCard class="sm:col-span-2 lg:col-span-[20] lg:row-start-1 lg:row-end-5">
    1
  </BentoCard>

  <BentoCard class="sm:row-span-2 lg:col-span-[16] lg:row-start-1 lg:row-end-5">
    <SpotifyLastSongPlayed />
  </BentoCard>

  <BentoCard class="sm:col-span-1 lg:col-span-[24] lg:row-start-4 lg:row-end-7">
    2
  </BentoCard>

  <BentoCard class="sm:col-span-1 lg:col-span-[10] lg:row-start-5 lg:row-end-7">
    3
  </BentoCard>

  <BentoCard
    class="sm:col-span-2 lg:col-span-[34] lg:row-start-7 lg:row-end-10 overflow-hidden"
  >
    <GitHubActivity />
  </BentoCard>

  <BentoCard
    class="sm:col-span-2 lg:col-span-[26] lg:row-start-5 lg:row-end-10"
  >
    4
  </BentoCard>
</article>
